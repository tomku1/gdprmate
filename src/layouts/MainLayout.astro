---
import "../styles/global.css";
import { NavBar } from "../components/layout/NavBar";
import { AuthProvider } from "../components/providers/AuthProvider";

interface Props {
  title: string;
}

const { title } = Astro.props;

// Get user session on the server side
let initialUser = null;
let isAuthenticated = false;

if (Astro.locals.supabase) {
  try {
    const { data } = await Astro.locals.supabase.auth.getUser();
    if (data?.user) {
      initialUser = {
        id: data.user.id,
        email: data.user.email,
        name: data.user.user_metadata?.name,
      };
      isAuthenticated = true;
    }
  } catch (error) {
    console.error("Failed to get user session:", error);
  }
}
---

<!doctype html>
<html lang="pl">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/png" href="/favicon.png" />
    <meta name="generator" content={Astro.generator} />
    <title>{title} | GdprMate</title>
  </head>
  <body class="min-h-screen flex flex-col">
    <AuthProvider client:load initialUser={initialUser} initialIsAuthenticated={isAuthenticated}>
      <NavBar client:load />
      <main class="flex-1 container mx-auto px-4 py-8">
        <slot />
      </main>

      <footer class="border-t py-4 mt-8">
        <div class="container mx-auto px-4">
          <div class="text-center text-sm text-muted-foreground">
            &copy; {new Date().getFullYear()} GdprMate. Wszelkie prawa zastrze≈ºone.
          </div>
        </div>
      </footer>
    </AuthProvider>
  </body>
</html>

<style>
  html,
  body {
    margin: 0;
    width: 100%;
  }
</style>
