---
import "../styles/global.css";

interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="pl">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/png" href="/favicon.png" />
    <meta name="generator" content={Astro.generator} />
    <title>{title} | GdprMate</title>
  </head>
  <body>
    <header class="border-b py-4">
      <div class="container mx-auto px-4">
        <div class="flex justify-center">
          <a href="/" class="text-2xl font-bold text-primary">GdprMate</a>
        </div>
      </div>
    </header>

    <main class="container mx-auto px-4 py-8">
      <slot />
    </main>
    <footer class="border-t py-4 mt-8">
      <div class="container mx-auto px-4">
        <div class="text-center text-sm text-muted-foreground">
          &copy; {new Date().getFullYear()} GdprMate. Wszelkie prawa zastrze≈ºone.
        </div>
      </div>
    </footer>
  </body>
</html>

<style>
  html,
  body {
    margin: 0;
    width: 100%;
    min-height: 100vh;
  }
</style>
